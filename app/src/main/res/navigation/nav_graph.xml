<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.final_project.presentation.screen.welcome.fragment.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.final_project.presentation.screen.forgot_password.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.final_project.presentation.screen.login.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_passcodeFragment"
            app:destination="@id/passcodeFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.final_project.presentation.screen.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.final_project.presentation.screen.signup.start.fragment.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_passcodeFragment"
            app:destination="@id/passcodeFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/passcodeFragment"
        android:name="com.example.final_project.presentation.screen.passcode.PasscodeFragment"
        android:label="fragment_passcode"
        tools:layout="@layout/fragment_passcode" >
        <action
            android:id="@+id/action_passcodeFragment_to_signUpCredentialsFragment"
            app:destination="@id/signUpCredentialsFragment" />
        <argument
            android:name="phoneNumber"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpCredentialsFragment"
        android:name="com.example.final_project.presentation.screen.signup.credentials.fragment.SignUpCredentialsFragment"
        android:label="fragment_sign_up_credentials"
        tools:layout="@layout/fragment_sign_up_credentials" >
        <action
            android:id="@+id/action_signUpCredentialsFragment_to_signUpSuccessFragment"
            app:destination="@id/signUpSuccessFragment" />
        <argument
            android:name="phoneNumber"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpSuccessFragment"
        android:name="com.example.final_project.presentation.screen.signup.success.fragment.SignUpSuccessFragment"
        android:label="fragment_sign_up_success"
        tools:layout="@layout/fragment_sign_up_success" >
        <action
            android:id="@+id/action_signUpSuccessFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpSuccessFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.final_project.presentation.screen.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.final_project.presentation.screen.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/restaurantDetailsFragment"
        android:name="com.example.final_project.presentation.screen.restoraunt_details.RestaurantDetailsFragment"
        android:label="fragment_restoraunt_details"
        tools:layout="@layout/fragment_restoraunt_details" />
</navigation>