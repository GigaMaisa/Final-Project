<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.final_project.presentation.screen.welcome.fragment.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.final_project.presentation.screen.forgot_password.fragment.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.final_project.presentation.screen.login.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_passcodeFragment"
            app:destination="@id/passcodeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_placeholderDestination"
            app:destination="@id/placeholderDestination"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.final_project.presentation.screen.splash.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_placeholderDestination"
            app:destination="@id/placeholderDestination" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.final_project.presentation.screen.signup.start.fragment.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_passcodeFragment"
            app:destination="@id/passcodeFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/passcodeFragment"
        android:name="com.example.final_project.presentation.screen.passcode.fragment.PasscodeFragment"
        android:label="fragment_passcode"
        tools:layout="@layout/fragment_passcode" >
        <action
            android:id="@+id/action_passcodeFragment_to_signUpCredentialsFragment"
            app:destination="@id/signUpCredentialsFragment" />
        <argument
            android:name="phoneNumber"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="verificationId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_passcodeFragment_to_placeholderDestination"
            app:destination="@id/placeholderDestination" />
    </fragment>

    <fragment
        android:id="@+id/signUpCredentialsFragment"
        android:name="com.example.final_project.presentation.screen.signup.credentials.fragment.SignUpCredentialsFragment"
        android:label="fragment_sign_up_credentials"
        tools:layout="@layout/fragment_sign_up_credentials" >
        <action
            android:id="@+id/action_signUpCredentialsFragment_to_signUpSuccessFragment"
            app:destination="@id/signUpSuccessFragment" />
        <argument
            android:name="phoneNumber"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpSuccessFragment"
        android:name="com.example.final_project.presentation.screen.signup.success.fragment.SignUpSuccessFragment"
        android:label="fragment_sign_up_success"
        tools:layout="@layout/fragment_sign_up_success" >
        <action
            android:id="@+id/action_signUpSuccessFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpSuccessFragment_to_placeholderDestination"
            app:destination="@id/placeholderDestination"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/restaurantDetailsFragment"
        android:name="com.example.final_project.presentation.screen.restoraunt_details.fragment.RestaurantDetailsFragment"
        android:label="fragment_restoraunt_details"
        tools:layout="@layout/fragment_restoraunt_details" />

    <fragment
        android:id="@+id/placeholderDestination"
        android:name="com.example.final_project.presentation.screen.home_container.fragment.HomeContainerFragment"
        android:label="Placeholder"
        tools:layout="@layout/fragment_home_container" >
        <action
            android:id="@+id/action_placeholderDestination_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
        <action
            android:id="@+id/action_placeholderDestination_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.final_project.presentation.screen.profile.fragment.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.example.final_project.presentation.screen.password.fragment.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_passwordFragment_to_placeholderDestination"
            app:destination="@id/placeholderDestination" />
    </fragment>
</navigation>